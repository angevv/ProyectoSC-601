@model IEnumerable<ProyectoSC_601.Entities.InventarioEnt>

@{
    ViewBag.Title = "ConsultaInventario";
    ViewBag.Mensaje = TempData["Mensaje"];
    Layout = "~/Views/Shared/_Layout_deAdmin.cshtml";
}

<div class="container mt-5 pt-4">
    <div class="row justify-content-center">
        <div class="col-12 grid-margin stretch-card">
            <div class="card-body">
                <br>
                <br>
                <br>
                @if (TempData["RegistroExito"] != null)
                {
                    <div class="alert alert-success" role="alert" style="text-align:center">
                        @TempData["RegistroExito"]
                    </div>
                }

                @if (TempData["ActualizacionExito"] != null)
                {
                    <div class="alert alert-success" role="alert" style="text-align:center">
                        @TempData["ActualizacionExito"]
                    </div>
                }
                <h4 class="card-title">Información de Inventario</h4>

                <div class="table-responsive">
                    <table class="table table-bordered table-hover">
                        <thead>
                            <tr>
                                <th>Código</th>
                                <th>Nombre</th>
                                <th>Estilo</th>
                                <th>Color</th>
                                <th>Descripción</th>
                                <th>Actualizar Estado</th>
                                <th>Actualizar</th>
                                <th>Eliminar</th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var item in Model)
                            {
                                <tr>
                                    <td>@item.Code</td>
                                    <td>@item.Name</td>
                                    <td>@item.Style</td>
                                    <td>@item.Color</td>
                                    <td>@item.Description</td>

                                    <td class="text-center">
                                        <a href="@Url.Action("ActualizarEstadoInventario", "Inventario", new { q = item.Id })">
                                            <i class="fa fa-exchange fa-lg"></i>
                                        </a>
                                    </td>

                                    <td class="text-center">
                                        <a href="@Url.Action("ActualizarInventario", "Inventario", new { q = item.Id })">
                                            <i class="fa fa-pencil-alt fa-lg text-success"></i>
                                        </a>
                                    </td>

                                    <td class="text-center">
                                        <a href="@Url.Action("EliminarInventario", "Inventario", new { q = item.Id })" onclick="return confirm('¿Estás seguro de que deseas eliminar este item de inventario permanentemente?');">
                                            <i class="fa fa-trash-alt fa-lg text-danger"></i>
                                        </a>
                                    </td>
                                </tr>
                            }
                        </tbody>
                    </table>
                    <div class="text-center mt-4">
                        <a href="@Url.Action("RegistrarInventario", "Inventario")" class="btn btn-success">
                            <i class="fa fa-plus"></i> Agregar item de inventario
                        </a>
                    </div>
                    <br>
                    <br>
                </div>
            </div>
        </div>
    </div>
</div>
