

@model ProyectoSC_601.Entities.ProveedorEnt

@{
    ViewBag.Title = "ActualizarProveedor";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="col-12 grid-margin stretch-card">
    <div class="card">
        <div class="card-body">
            <h4 class="card-title">Información del Usuario</h4>

            @if (ViewBag.MensajeUsuario != null)
            {
                <div class="alert alert-danger" role="alert" style="text-align:center">
                    @ViewBag.MensajeUsuario
                </div>
            }

            @using (Html.BeginForm("ActualizarProveedor", "Proveedor", FormMethod.Post, new { @class = "pt-3" }))
            {
                @Html.HiddenFor(m => m.ID_Proveedor)

                <div class="form-group">
                    <label for="exampleInputName1">Nombre</label>
                    @Html.TextBoxFor(m => m.Nombre_Proveedor, new
                    {
                        @class = "form-control form-control-lg",
                        @placeholder = "Identificación",
                   @type = "text",
               })
                </div>
                <div class="form-group">
                    <label for="exampleInputName1">Nombre</label>
                    @Html.TextBoxFor(m => m.Apellido_Proveedor, new { @style = "background-color:#eeeeee", @class = "form-control form-control-lg", @placeholder = "Apellido", @type = "text" })
                </div>
                <div class="form-group">
                    <label for="exampleInputName1">Cedula</label>
                    @Html.TextBoxFor(m => m.Cedula_Proveedor, new { @class = "form-control form-control-lg", @placeholder = "Cedula", @type = "text" })
                </div>
                <div class="form-group">
                    <label for="exampleInputName1">Direccion Exacta</label>
                    @Html.TextBoxFor(m => m.Direccion_Exacta, new { @class = "form-control form-control-lg", @placeholder = "Direccion", @type = "text" })
                </div>
                <div class="form-group">
                    <label for="exampleSelectGender">Empresa</label>
                    @Html.DropDownListFor(m => m.Empresa, ViewBag.combo as List<SelectListItem>, new { @class = "form-control form-control-lg" })
                </div>

                <button type="submit" class="btn btn-primary mr-2">Actualizar</button>
            }
        </div>
    </div>
</div>

