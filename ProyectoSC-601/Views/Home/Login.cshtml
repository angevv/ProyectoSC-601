@{
    ViewBag.Title = "Login";
    Layout = "~/Views/Shared/_Layout_Login.cshtml";
}

<div class="container" id="container">
    <div class="form-container sign-up-container">
        <form action="#">
            <h1>Crear Cuenta</h1>
            <div class="social-container">
                <a href="#" class="social"><i class="fa-brands fa-facebook-f"></i></a>
                <a href="#" class="social"><i class="fa-brands fa-google-plus-g"></i></a>
                <a href="#" class="social"><i class="fa-brands fa-linkedin-in"></i></a>
            </div>
            <span>o utiliza tu correo para el registro</span>
            <input type="text" placeholder="Nombre" />
            <input type="email" placeholder="Correo" />
            <input type="password" placeholder="Clave" />
            <button>Registrarse</button>
        </form>
    </div>
    <div class="form-container sign-in-container">
        <form action="#">
            <h1>Iniciar Sesion</h1>
            <div class="social-container">
                <a href="#" class="social"><i class="fa-brands fa-facebook-f"></i></a>
                <a href="#" class="social"><i class="fa-brands fa-google-plus-g"></i></a>
                <a href="#" class="social"><i class="fa-brands fa-linkedin-in"></i></a>
            </div>
            <span>o utiliza tu cuenta</span>
            <input type="email" placeholder="Correo" />
            <input type="password" placeholder="Clave" />
            <a href="#">Olvidaste tu contraseña?</a>
            <button>Iniciar Sesion</button>
        </form>
    </div>
    <div class="overlay-container">
        <div class="overlay">
            <div class="overlay-panel overlay-left">
                <h1>Bienvenido!</h1>
                <p>Para mantenerte conectado con nosotros porfavor inicia sesion</p>
                <button class="ghost" id="signIn">Iniciar Sesion</button>
            </div>
            <div class="overlay-panel overlay-right">
                <h1>Hola, Amigo!</h1>
                <p>Introduce tus datos personales y comienza tu viaje con nosotros.</p>
                <button class="ghost" id="signUp">Registrarse</button>
            </div>
        </div>
    </div>
</div>

<footer>

</footer>